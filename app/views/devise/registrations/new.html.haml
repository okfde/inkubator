- title 'Registrierung'

%h2
  = t('sign_up')
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  .row
    .small-8.columns
      = f.label t('email')
      = f.email_field :email
  .row
    .small-8.columns
      = f.label t('username')
      = f.text_field :username
  .row
    .small-8.columns
      = f.label t('password')
      = f.password_field :password
  .row
    .small-8.columns
      = f.label t('password_confirmation')
      = f.password_field :password_confirmation
  .row
    .small-8.columns
      = f.submit "Sign up", :class => "button round"
  .row
    .small-8.columns
      = render "devise/shared/links"
