- title 'Beurteilen'

= render 'overview'

= form_for @voting, :url => idea_update_votes_path(@idea), :method => :post do |f|
  .row
    .large-8.columns.spacetop-20
      %h4
        Problem
      = @idea.problem
    .large-4.columns.spacetop-20
      %br
      = f.select :problem, options_for_select({t('select') => '', t('realistic') => 1, t('unrealistic') => -1, t('abstain') => 0}, @voting.problem.to_s)
  .row
    .large-8.columns.spacetop-20
      %h4
        = t('goal')
      = @idea.goal
    .large-4.columns.spacetop-20
      %br
      = f.select :goal, options_for_select({t('select') => '', t('realistic') => 1, t('unrealistic') => -1, t('abstain') => 0}, @voting.goal.to_s)
  .row
    .large-8.columns.spacetop-20
      %h4
        = t('impact')
      = @idea.impact
    .large-4.columns.spacetop-20
      %br
      = f.select :impact, options_for_select({t('select') => '', t('realistic') => 1, t('unrealistic') => -1, t('abstain') => 0}, @voting.impact.to_s)

  .row
    .large-8.columns.spacetop-20
      = f.submit t('save'), :class => "button round"
