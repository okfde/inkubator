!!! 5
%html
  / paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/
  / [if lt IE 7]
    <html class="ie6" lang="en">
  / [if IE 7]
    <html class="ie7" lang="en">
  / [if IE 8]
    <html class="ie8" lang="en">
  / [if gt IE 8]
    <html lang="en">
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title
      OKF DE INKUBATOR -
      = content_for?(:title) ? yield(:title) : "Untitled"
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "keywords"}/
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag "vendor/custom.modernizr"
    = csrf_meta_tags
  %body
    .container
      .row
        .large-4.columns.title
          .sitename
            Inkubator
        .large-6.columns
          %img{:src => "/assets/header-logox2.png", :class => "logo"}
          %span.brand
          Open Knowledge  Deutschland
      .row
        .large-12.columns.flash-span.spacetop-50
          - if flash[:notice]
            .alert-box.success
              = flash[:notice]
          - if flash[:alert]
            .alert-box
              = flash[:alert]
          - if flash[:error]
            .alert-box.error
              = flash[:error]

      .row
        .large-6.small-centered.columns
          = yield
